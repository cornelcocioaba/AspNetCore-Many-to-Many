@model IEnumerable<Device>
<h2>Customers</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Type</th>
        <th>Customers</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeviceType)
            </td>
            <td>
                @foreach(var cd in item.CustomerDevices)
                {
                    <span>cd.Device</span>
                }
            </td>
        </tr>
    }
</table>