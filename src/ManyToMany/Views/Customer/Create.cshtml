@model CustomerViewModel

@{
    ViewBag.Title = "New Customer";
}

<form asp-action="Create" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="CustomerDisplayName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CustomerDisplayName" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <select asp-for="SelectedDevices" asp-items="Model.Devices" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>